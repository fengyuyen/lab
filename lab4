    <script>
        function Function1() {
            if (form1.Height.value == "") {
                alert("未輸入Height");
            }
            else if (form1.Weight.value == "") {
                alert("未輸入Weight");
            }
            else if (form1.Height.value < '0' || form1.Height.value > '9') {
                alert("Height輸入需為數字");
            }
            else if (form1.Weight.value < '0' || form1.Weight.value > '9') {
                alert("Weight輸入需為數字");
            }
        }
        function Function2() {
            var Height = 0;
            var BMI = 0;
            alert(BMI = (form1.Height.value) / ((form1.Weight.value / 100) * (form1.Weight.value / 100)));
        }
        function getPatient() {
            var oform = document.forms['form1'];
            var Patientname = oform.elements.Patientname.value;
            var DateofBirth = oform.elements.DateofBirth.value;
            var Height = oform.elements.Height.value;
            var Weight = oform.elements.Weight.value;
            var HP = oform.elements.HP.value;
            var Anesthesia = oform.elements.Anesthesia.value;
            var PATSDSRN = oform.elements.PATSDSRN.value;
            var Labs = oform.elements.Labs.value;
            var Culture = oform.elements.Culture.value;
            var Xray = oform.elements.Xray.value;
            var Celebrex = oform.elements.Celebrex.value;
            var checks = document.getElementsByClassName('checks')

            alert('Patientname是' + Patientname + '\n Date of Birth 是' + DateofBirth + '\n Height是' + Height + '\n Weight是' + Weight + '\n H&P 是' + HP
                + '\n Anesthesia 是' + Anesthesia + '\n PAT/SDS RN 是' + PATSDSRN + '\n Labs 是' + Labs + '\n Culture 是' + Culture + '\n X-ray 是' + Xray + '\n Celebrex 是' + Celebrex);
        }
    </script>

